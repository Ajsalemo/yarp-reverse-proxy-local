{
  "Urls": "http://localhost:5000;https://localhost:5001",
  "LogLevel": {
    "Default": "Information",
    "Microsoft.AspNetCore": "Warning"
  },
  "AllowedHosts": "*",
  "ReverseProxy": {
    "Routes": {
      "minimumroute": {
        "ClusterId": "localCluster",
        "Match": {
          "Path": "{**catch-all}",
          "Hosts": ["localhost"],
          "Methods": ["GET"]
        },
        "Transforms": [
          {
            "ResponseHeaderRemove": "X-Powered-By",
            "When": "Always"
          },
          {
            "ResponseHeaderRemove": "Server",
            "When": "Always"
          }

        ]
      }
    },
    "Clusters": {
      "localCluster": {
        "Destinations": {
          "localContainer": {
            "Address": "http://localhost:8080/"
          }
        }
      }
    }
  }
}
